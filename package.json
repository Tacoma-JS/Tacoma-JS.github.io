{
  "name": "tacoma",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "metalsmith": "metalsmith",
    "md:watch": "watch 'npm run metalsmith' content",
    "hbs:watch": "watch 'npm run metalsmith' layouts",
    "css": "postcss assets/stylesheets/index.css",
    "css:watch": "watch 'npm run css' assets/stylesheets",
    "js": "rollup -c",
    "js:lint": "standard './assets/scripts/**/*.js' | snazzy",
    "watch": "concurrently 'npm run css:watch' 'npm run md:watch' 'npm run hbs:watch'",
    "serve": "browser-sync start --files  \"./dist/*.html,./dist/*.js,./dist/*.css\" --server dist",
    "dev": "concurrently 'npm run serve' 'npm run watch'",
    "start": "serve dist/",
    "build": "npm run metalsmith && npm run css && npm run js",
    "deploy": "now && now alias"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tacoma-JS/Tacoma-JS.github.io.git"
  },
  "author": "charles peters <charlespeters42@gmail.com> (https://charlespeters.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tacoma-JS/Tacoma-JS.github.io/issues"
  },
  "homepage": "https://github.com/Tacoma-JS/Tacoma-JS.github.io#readme",
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "browser-sync": "^2.18.8",
    "concurrently": "^3.3.0",
    "cssnano": "^3.10.0",
    "ghpages": "^0.0.10",
    "handlebars": "^4.0.6",
    "handlebars-layouts": "^3.1.4",
    "husky": "^0.13.1",
    "metalsmith": "^2.3.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-collections": "^0.9.0",
    "metalsmith-discover-partials": "^0.1.0",
    "metalsmith-html-minifier": "^2.2.0",
    "metalsmith-layouts": "^1.8.0",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-register-helpers": "^0.2.0",
    "metalsmith-to-json": "^0.1.7",
    "postcss-cli": "^3.0.0-beta",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "serve": "^3.4.1",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "pluton.css": "^1.0.0"
  },
  "now": {
    "alias": "tacoma.now.sh"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-0"
    ],
    "plugins": [
      "external-helpers"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "postcss": {
    "map": false,
    "from": "assets/stylesheets/index.css",
    "to": "dist/main.css",
    "plugins": {
      "postcss-import": {},
      "autoprefixer": {},
      "postcss-custom-properties": {},
      "cssnano": {
        "filterPlugins": false,
        "autoprefixer": false,
        "mergeRules": false,
        "discardEmpty": true,
        "discardComments": {
          "removeAllButFirst": true
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
