{
  "source": "./content",
  "destination": "./dist",
  "metadata": {
    "site": "Tacoma.js",
    "subtitle": "A meetup in the PNW"
  },
  "clean": false,
  "plugins": {
    "metalsmith-register-helpers": {
      "directory": "layouts/helpers"
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "partials": "layouts/partials",
      "rename": true
    },
    "metalsmith-collections": {
      "posts": {
        "pattern": "posts/*.md",
        "sortBy": "date",
        "reverse": true
      },
      "pages": {
        "pattern": "*.md"
      }
    },
    "metalsmith-permalinks": {
      "pattern": ":title",
      "relative": false,
      "linksets": [{
        "match": { "collection": "posts" },
        "pattern": "updates/:title",
        "date": "mmddyy"
      }]
    },
    "metalsmith-markdown": {},
    "metalsmith-assets": {}
  }
}
